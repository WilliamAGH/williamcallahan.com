{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": { "browser": true, "es2023": true },
  "ignorePatterns": [
    "**/.next/**",
    "**/node_modules/**",
    "**/dist/**",
    "**/out/**",
    "components/ui/code-block/prism-syntax-highlighting/prism.js",
    "**/*.mdx"
  ],
  "categories": {
    "correctness": "error",
    "suspicious": "error",
    "perf": "warn",
    "style": "off",
    "pedantic": "off"
  },
  "rules": {
    "no-duplicate-imports": "error",
    "no-unreachable": "error"
  },
  "overrides": [
    {
      "files": ["**/*.{js,cjs,mjs}"],
      "rules": {
        "typescript/*": "off"
      }
    }
  ]
}

{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@/data/*": ["../data/*"],
      "@/config/*": ["../config/*"],
      "@/types/*": ["../src/types/*"],
      "@/lib/*": ["../src/lib/*"],
      "@/components/*": ["../src/components/*"],
      "@/app/*": ["../src/app/*"],
      "@/hooks/*": ["../src/hooks/*"],
      "@/*": ["../src/*"]
    },
    "types": [
      "react",
      "react-dom",
      "react/jsx-runtime",
      "vitest/globals",
      "@testing-library/jest-dom/vitest",
      "node"
    ],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "noUncheckedIndexedAccess": false,
    "strict": true,
    "skipLibCheck": true,
    "ignoreDeprecations": "5.0"
  },
  "include": [
    "../src/app/**/*.ts",
    "../src/app/**/*.tsx",
    "../src/lib/**/*.ts",
    "../src/lib/**/*.tsx",
    "../src/components/**/*.ts",
    "../src/components/**/*.tsx",
    "../data/**/*.ts",
    "../data/**/*.tsx",
    "../src/hooks/**/*.ts",
    "../src/hooks/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "../src/types/**/*.ts",
    "../src/types/**/*.tsx"
  ],
  "exclude": ["node_modules", ".next", "out", "dist"]
}

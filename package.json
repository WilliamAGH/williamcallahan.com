{
  "name": "william-callahan-dot-com",
  "type": "module",
  "private": true,
  "version": "0.0.5",
  "homepage": "https://williamcallahan.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/WilliamAGH/williamcallahan.com.git"
  },
  "bugs": {
    "url": "https://github.com/WilliamAGH/williamcallahan.com/issues"
  },
  "scripts": {
    "update-s3": "bun scripts/data-updater.ts",
    "scheduler": "bun lib/server/scheduler.ts",
    "submit-sitemap": "ts-node scripts/submit-sitemap.ts",
    "analyze": "ANALYZE=true next build",
    "benchmark": "bun scripts/benchmark.js",
    "benchmark-api": "bun scripts/benchmark-api.js",
    "predev": "mkdir -p data/bookmarks data/github-activity data/images/logos",
    "prestart": "mkdir -p data/bookmarks data/github-activity data/images/logos",
    "prefetch": "bun scripts/data-updater.ts --prefetch-dev",
    "populate-volumes": "NODE_ENV=development bun scripts/populate-volumes.ts",
    "dev": "bun run populate-volumes && bun run cleanCache && NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "dev:full": "bun run populate-volumes && bun run cleanCache && NODE_OPTIONS='--max-old-space-size=4096' next dev",
    "dev:turbo": "mkdir -p data/bookmarks data/github-activity data/images/logos && bun run cleanCache && NODE_OPTIONS='--max-old-space-size=4096' next dev --turbo",
    "build": "bun run validate && NEXT_PHASE=phase-production-build bun scripts/data-updater.ts --prefetch-build && next build",
    "build:full": "bun run validate && NEXT_PHASE=phase-production-build bun scripts/data-updater.ts --prefetch-dev && next build",
    "start": "NODE_OPTIONS='--max-old-space-size=2048' node .next/standalone/server.js",
    "start:plain": "NODE_OPTIONS='--max-old-space-size=2048' next start",
    "docker:build": "docker buildx build --platform=linux/amd64 --build-arg NODE_ENV=production --build-arg NEXT_TELEMETRY_DISABLED=1 --load -t williamcallahan-web:latest .",
    "docker:start": "docker run --platform=linux/amd64 -p 3010:3000 -e NODE_ENV=production -e NODE_OPTIONS='--max-old-space-size=2048' williamcallahan-web:latest",
    "docker:prefetch": "docker run --platform=linux/amd64 -p 3010:3000 -e NODE_ENV=production -e CONTAINER=true williamcallahan-web:latest bun scripts/data-updater.ts --prefetch-dev",
    "docker:populate-volumes": "docker run --platform=linux/amd64 -p 3010:3000 -e NODE_ENV=production -e CONTAINER=true williamcallahan-web:latest bun scripts/populate-volumes.ts",
    "monitor:status": "bun lib/health/status-monitor.server.ts",
    "lint": "eslint . --config eslint.config.ts --format compact",
    "lint:errors": "eslint . --config eslint.config.ts --quiet --format compact",
    "lint:css": "stylelint --fix 'app/**/*.css' 'styles/**/*.css'",
    "biome:check": "biome check .",
    "biome:format": "biome format --write .",
    "biome:lint": "biome lint .",
    "type-check": "tsc --noEmit",
    "validate": "bun run lint && bun run type-check && bun run biome:lint",
    "validate:full": "bun run lint && bun run type-check && bun run biome:check",
    "clean": "rm -rf .next out node_modules",
    "cleanCache": "rm -rf .next/cache",
    "test": "jest --color --config=config/jest/config.ts",
    "test:watch": "jest --color --watch --config=config/jest/config.ts",
    "test:coverage": "jest --coverage --config=config/jest/config.ts",
    "test:ci": "jest --ci --coverage --config=config/jest/config.ts",
    "test:smoke": "jest --testPathPattern=smoke --config=config/jest/config.ts",
    "test:smoke:blog": "bun run test:smoke -- --testPathPattern=blog",
    "test:smoke:pages": "bun run test:smoke -- --testPathPattern=pages",
    "prepare": "node .husky/install.mjs"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.826.0",
    "@aws-sdk/lib-storage": "^3.832.0",
    "@fontsource/ibm-plex-mono": "^5.2.6",
    "@mapbox/rehype-prism": "^0.9.0",
    "@mdx-js/mdx": "^3.1.0",
    "@octokit/graphql": "^8.2.2",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/instrumentation": "^0.43.0",
    "@sentry/browser": "9.27.0",
    "@sentry/nextjs": "9.27.0",
    "@sentry/opentelemetry": "9.27.0",
    "@tailwindcss/typography": "^0.5.16",
    "cheerio": "^1.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "file-type": "^21.0.0",
    "framer-motion": "^12.16.0",
    "fuse.js": "^7.1.0",
    "googleapis": "^149.0.0",
    "gray-matter": "^4.0.3",
    "import-in-the-middle": "^1.14.0",
    "lru-cache": "^11.1.0",
    "lucide-react": "^0.512.0",
    "mdast-util-mdx-jsx": "^3.2.0",
    "minisearch": "^7.1.2",
    "next": "^15.3.3",
    "next-mdx-remote": "4.4.1",
    "next-themes": "^0.4.6",
    "node-cron": "^4.1.0",
    "prismjs": "^1.30.0",
    "react": "^19.1.0",
    "react-activity-calendar": "^2.7.12",
    "react-dom": "^19.1.0",
    "react-parallax-tilt": "^1.7.297",
    "react-tweet": "^3.2.2",
    "rehype-prism": "^2.3.3",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^2.0.0",
    "remark-mdx": "^3.1.0",
    "require-in-the-middle": "^7.5.2",
    "schema-dts": "^1.1.5",
    "server-only": "^0.0.1",
    "sharp": "^0.34.2",
    "systeminformation": "^5.27.6",
    "tailwind-merge": "^3.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@eslint/js": "^9.28.0",
    "@happy-dom/global-registrator": "^17.6.3",
    "@mdx-js/react": "^3.1.0",
    "@next/eslint-plugin-next": "^15.3.3",
    "@svgr/webpack": "^8.1.0",
    "@swc/core": "^1.11.31",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.15.30",
    "@types/node-fetch": "3.0.2",
    "@types/react": "^19.1.6",
    "@types/react-dom": "^19.1.6",
    "@types/systeminformation": "^3.54.1",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@typescript-eslint/typescript-estree": "^8.33.1",
    "autoprefixer": "^10.4.21",
    "bun-types": "^1.2.15",
    "dotenv": "^16.5.0",
    "eslint": "^9.28.0",
    "eslint-config-next": "^15.3.3",
    "eslint-formatter-compact": "^8.40.0",
    "eslint-plugin-jest": "^28.13.0",
    "eslint-plugin-mdx": "^3.4.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "globals": "^16.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.0-beta.3",
    "jest-extended": "^6.0.0",
    "jiti": "^2.4.2",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.0",
    "node-fetch": "^3.3.2",
    "node-mocks-http": "^1.17.2",
    "postcss": "^8.5.4",
    "postcss-preset-env": "^10.2.1",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-slug": "^5.1.0",
    "remark-lint-link-title-style": "^4.0.1",
    "remark-lint-list-item-spacing": "^5.0.1",
    "remark-lint-maximum-heading-length": "^4.1.1",
    "remark-lint-maximum-line-length": "^4.1.1",
    "remark-lint-no-undefined-references": "^5.0.2",
    "remark-lint-unordered-list-marker-style": "^4.0.1",
    "remark-preset-lint-consistent": "^6.0.1",
    "remark-preset-lint-markdown-style-guide": "^6.0.1",
    "remark-preset-lint-recommended": "^7.0.1",
    "stylelint": "^16.20.0",
    "stylelint-config-prettier": "^9.0.5",
    "stylelint-config-recommended": "^16.0.0",
    "stylelint-config-standard": "^38.0.0",
    "stylelint-config-tailwindcss": "^1.0.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "undici": "^7.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mdx}": [
      "eslint --config eslint.config.ts --fix"
    ]
  },
  "trustedDependencies": [
    "@sentry/cli",
    "@swc/core",
    "sharp",
    "unrs-resolver"
  ],
  "stylelint": {
    "fix": true,
    "extends": [
      "stylelint-config-recommended",
      "stylelint-config-tailwindcss"
    ],
    "rules": {
      "declaration-no-important": true,
      "selector-max-specificity": "1,5,0",
      "selector-max-compound-selectors": 4,
      "comment-no-empty": true,
      "property-no-vendor-prefix": null,
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "tailwind",
            "apply",
            "variants",
            "responsive",
            "screen",
            "layer"
          ]
        }
      ],
      "selector-class-pattern": null
    }
  },
  "packageManager": "bun@1.2.15"
}

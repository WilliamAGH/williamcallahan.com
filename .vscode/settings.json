{
  "typescript.preferences.useAliasesForRenames": false,
  "css.customData": [".vscode/css-data.json"],
  "css.validate": false,
  "scss.validate": false,
  "less.validate": false,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.suggest.autoImports": true,
  "typescript.workspaceSymbols.scope": "currentProject",
  "typescript.reportStyleChecksAsWarnings": false,
  "typescript.preferences.importModuleSpecifier": "relative",
  "typescript.preferences.importModuleSpecifierEnding": "minimal",
  "typescript.suggest.enabled": true,
  "typescript.suggest.paths": true,
  "typescript.suggest.includeAutomaticOptionalChainCompletions": true,
  "typescript.suggest.includeCompletionsForImportStatements": true,
  "typescript.suggest.objectLiteralMethodSnippets.enabled": false,
  "typescript.preferences.projectConfigPaths": ["tsconfig.json", "__tests__/tsconfig.json"],
  "files.watcherExclude": {
    "**/.git/**": true,
    "**/.next/**": true,
    "**/dist/**": true,
    "**/coverage/**": true
  },
  "files.associations": {
    "*.tsx": "typescriptreact"
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/.next": true,
    "**/dist": true,
    "**/coverage": true,
    "**/.git": true,
    "**/logs": true,
    "**/*.log": true,
    "**/build": true,
    "**/out": true
  },
  "files.exclude": {
    "**/node_modules": true, // Exclude node_modules from workspace to prevent TS checking
    "**/.git": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/.next": true
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html", "vue", "markdown"],
  "typescript.validate.enable": true, // Ensure TS validation is on
  // Prettier is the only formatter - stable and low-churn
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  // Keep this off unless you specifically want import reordering every save.
  // You can always run "Organize Imports" on demand.
  // "editor.codeActionsOnSave": { "source.organizeImports": "explicit" },

  // ESLint: diagnostics only; ESLint should not format
  "eslint.format.enable": false,

  // Oxlint VS Code extension: run lint on save, not on type to reduce background churn
  "oxc.enable": true,
  "oxc.lint.run": "onSave",
  "typescript.disableAutomaticTypeAcquisition": true,
  "github-actions.use-enterprise": true,
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "terminal.integrated.shellIntegration.enabled": true,
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.profiles.osx": {
    "zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "jest.jestCommandLine": "npx jest --config config/jest/config.ts",
  "jest.runMode": {
    "type": "on-demand",
    "runAllTestsOnStartup": false
  },
  "jest.rootPath": ".",
  "markdownlint.config": {
    "MD040": false,
    "MD024": false,
    "MD036": false,
    "MD013": false,
    "MD028": false,
    "MD029": false,
    "MD031": false,
    "MD033": false,
    "MD041": false,
    "MD050": false,
    "MD051": false
  },
  "stylelint.validate": ["css", "scss", "sass"],
  "stylelint.snippet": ["css", "scss", "sass"],
  "stylelint.reportInvalidScopeDisables": true,
  "stylelint.reportNeedlessDisables": true,
  "stylelint.reportDescriptionlessDisables": true,
  "tailwindCSS.experimental.configFile": "config/tailwind.config.js",
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript",
    "typescriptreact": "javascript"
  }
}

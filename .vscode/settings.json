{
	"typescript.preferences.useAliasesForRenames": false,
	"css.customData": [".vscode/css-data.json"],
	"css.validate": false,
	"scss.validate": false,
	"less.validate": false,
	"typescript.preferences.includePackageJsonAutoImports": "off",
	"typescript.updateImportsOnFileMove.enabled": "always",
	"typescript.suggest.autoImports": true,
	"typescript.workspaceSymbols.scope": "currentProject",
	"typescript.tsserver.experimental.enableProjectDiagnostics": true,
	"typescript.tsserver.enableTracing": false,
	"typescript.tsserver.useSyntaxServer": "never", // Force full semantic server
	"files.watcherExclude": {
		"**/.git/**": true,
		"**/.next/**": true,
		"**/dist/**": true,
		"**/coverage/**": true
	},
	"files.useExperimentalFileWatcher": false,
	"files.associations": {
		"*.tsx": "typescriptreact"
	},
	"search.exclude": {
		"**/node_modules": true,
		"**/.next": true,
		"**/dist": true,
		"**/coverage": true,
		"**/.git": true,
		"**/logs": true,
		"**/*.log": true,
		"**/build": true,
		"**/out": true
	},
	"files.exclude": {
		"**/node_modules": false,
		"**/.git": true,
		"**/.DS_Store": true,
		"**/Thumbs.db": true
	},
	"eslint.runtime": null,
	"eslint.validate": [
		"javascript",
		"javascriptreact",
		"typescript",
		"typescriptreact",
		"html",
		"vue",
		"markdown"
	],
	"typescript.validate.enable": true, // Ensure TS validation is on
	"editor.formatOnSave": false,
	"editor.defaultFormatter": "biomejs.biome",
	"editor.codeActionsOnSave": {
		"quickfix.biome": "explicit"
	},
	"biome.lsp.bin": "./node_modules/@biomejs/biome/bin/biome",
	"github-actions.use-enterprise": true,
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[css]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[markdown]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"terminal.integrated.shellIntegration.enabled": true,
	"terminal.integrated.defaultProfile.osx": "zsh",
	"terminal.integrated.profiles.osx": {
		"zsh": {
			"path": "/bin/zsh",
			"args": ["-l"]
		}
	}
}

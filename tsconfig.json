{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    // "types": ["react/jsx-runtime", "bun-types", "jest"], // Reverted: Remove to allow default @types resolution
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/server-components/*": [
        "./components/server/*"
      ],
      "@/client-components/*": [
        "./components/client/*"
      ],
      "@/shared/*": [
        "./components/shared/*",
        "./lib/shared/*"
      ],
      "@/hooks/*": [
        "./lib/hooks/*",
        "./hooks/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/utils/*": [
        "./lib/utils/*"
      ],
      "bun:test": ["node_modules/bun-types/test.d.ts"]
    },
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": false,
    "noUncheckedIndexedAccess": false,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "allowUmdGlobalAccess": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    "**/*.mjs",
    ".next/types/**/*.ts",
    "components/**/*",
    "app/**/*",
    "lib/**/*",
    "types/**/*",
    "eslint.config.ts",
    "instrumentation.ts",
    "middleware.ts"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "out",
    "dist"
  ]
}

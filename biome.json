{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "files": {
    "includes": [
      "**/*",
      "!node_modules",
      "!components/ui/code-block/prism-syntax-highlighting/prism.js",
      "!.next",
      "!coverage",
      "!**/*.mdx",
      "!.DS_Store",
      "!.husky",
      "!*.env*",
      "!*.ico",
      "!bun.lock",
      "!README.md",
      "!docs/**/*.md",
      "!.jest-pre-compiled"
    ],
    "maxSize": 2097152,
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAltText": "off"
      },
      "security": {},
      "style": {
        "useImportType": "off",
        "useTemplate": "off"
      },
      "complexity": {
        "useArrowFunction": "off"
      },
      "suspicious": {
        "noAssignInExpressions": "off",
        "noShadowRestrictedNames": "off",
        "useIterableCallbackReturn": "off",
        "noUnknownAtRules": "off"
      },
      "correctness": {
        "noUnusedVariables": "off",
        "useUniqueElementIds": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "eslint.config.ts",
        "eslint.config.js",
        "*.config.{js,ts,mjs,cjs}",
        "jest.config.{js,ts}",
        "next.config.*",
        "postcss.config.*",
        "tailwind.config.*",
        "stylelint.config.*"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "complexity": {
            "noForEach": "off"
          }
        }
      },
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.client.{ts,tsx}"],
      "linter": {
        "rules": {
          "correctness": {
            "useExhaustiveDependencies": "warn"
          }
        }
      }
    },
    {
      "includes": ["**/__tests__/**/*", "**/*.{test,spec}.{js,ts,jsx,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      },
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    },
    {
      "includes": ["components/analytics/analytics.client.tsx"],
      "linter": {
        "rules": {}
      }
    },
    {
      "includes": ["components/ui/terminal/selection-view.client.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off"
          },
          "correctness": {
            "useExhaustiveDependencies": "off"
          }
        }
      }
    },
    {
      "includes": ["components/ui/terminal/terminal-loader.client.tsx"],
      "linter": {
        "rules": {
          "a11y": {
            "useSemanticElements": "off"
          }
        }
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRules": "off"
          }
        }
      }
    },
    {
      "includes": ["components/features/blog/blog-article/mdx-content.client.tsx"],
      "linter": {
        "rules": {
          "correctness": {
            "noNestedComponentDefinitions": "off"
          }
        }
      }
    },
    {
      "includes": ["lib/server-cache.ts", "types/server-cache.d.ts"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    }
  ]
}

{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules/**",
      "coverage/**"
    ],
    "rules": {
      "recommended": true,
      "suspicious": {
        "noConfusingVoidType": "off",
        "noExplicitAny": "error"
      },
      "complexity": {
        "noUselessEmptyExport": "off",
        "useArrowFunction": "error"
      },
      "correctness": {
        "useExhaustiveDependencies": "error"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single"
        }
  },
  "formatter": {
    "enabled": true,
    "ignore": [
      "node_modules/**",
      "coverage/**"
    ]
  }
}
{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "files": {
    "includes": [
      "**/*",
      "!node_modules/**",
      "!components/ui/code-block/prism-syntax-highlighting/prism.js",
      "!.next/**",
      "!coverage/**",
      "!**/*.mdx",
      "!.DS_Store",
      "!.husky/**",
      "!*.env*",
      "!*.ico",
      "!bun.lock",
      "!README.md",
      "!docs/**/*.md"
    ],
    "maxSize": 1048576,
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 120
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "useAltText": "off"
      },
      "security": {
        "noBlankTarget": "off"
      },
      "style": {
        "useImportType": "off"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "off"
      }
    }
  },
  "overrides": [
    {
      "includes": [
        "eslint.config.ts",
        "eslint.config.js",
        "*.config.{js,ts,mjs,cjs}",
        "jest.config.{js,ts}",
        "next.config.*",
        "postcss.config.*",
        "tailwind.config.*",
        "stylelint.config.*"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          },
          "complexity": {
            "noForEach": "off"
          }
        }
      },
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    },
    {
      "includes": ["**/__tests__/**/*", "**/*.{test,spec}.{js,ts,jsx,tsx}"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "off"
          }
        }
      },
      "assist": {
        "actions": {
          "source": {
            "organizeImports": "off"
          }
        }
      }
    },
    {
      "includes": ["components/analytics/analytics.client.tsx"],
      "linter": {
        "rules": {
          "nursery": {
            "useUniqueElementIds": "off"
          }
        }
      }
    }
  ]
}
